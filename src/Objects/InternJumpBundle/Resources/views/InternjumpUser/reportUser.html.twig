<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="viewport" content="width=device-width"/>
        <meta name="google-site-verification" content="4h4nUoQOl0ougVoshJ0GYOcDNtwUI-2YOvQCuRLjric" />
        <link href="{{ asset('css/bootstrap.min.css')}}" rel="stylesheet" media="screen"/>
        <link href="{{ asset('css/main.css')}}" rel="stylesheet" media="screen"/>
        <link href="{{ asset('css/bootstrap-responsive.css')}}" rel="stylesheet"/>
    </head>
    <body>
        <div class="container span4">
            <div class="row-fluid show-grid">
                <div class="company-form Resume" style="margin-top: 40px;">
                    <div class="Result-box">
                        <h4 class="title3">Report User</h4>
                        <form class="form-horizontal" action="{{ path('report_user',{'userId' : userId,'cvId' : cvId}) }}" method="post" {{ form_enctype(form) }}>
                                {% if form_errors(form) %}
                                <div class="alert alert-error">
                                    <button data-dismiss="alert" class="close" type="button"> &times; </button>
                                    {{ form_errors(form) }}
                                </div>
                                {% endif %}

                                <div class="control-group">
                                    <label class="control-label" style="text-align:left;">Reason</label>
                                    <div class="controls">
                                    {{ form_widget(form.reason) }}
                                    {% if form_errors(form.reason) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.reason) }}
                                        </div>
                                   {% endif %}
                                    </div>
                               </div>

                               <div class="control-group">
                                    <label class="control-label" style="text-align:left;">Please briefly explain your reason for reporting this candidate</label>
                                    <div class="controls">
                                    {{ form_widget(form.reasonText,{'attr' : {'style' : 'width:99%;'}}) }}
                                    {% if form_errors(form.reasonText) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.reasonText) }}
                                        </div>
                                   {% endif %}
                                    </div>
                               </div>

                            <div class="control-group">
                                    {{ form_rest(form) }}
                                    <div class="controls" style="margin-bottom: 10px;">
                                        <button type="submit" class="btn">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <script src="{{asset('js/libs/jquery-1.8.1.js')}}"></script>
            <script src="{{asset('js/bootstrap.min.js')}}"></script>
            <script>
                parent.$.colorbox.resize({
                        innerWidth: $('body').width(),
                        innerHeight: $('body').height()
                    });
                $(document).ready(function() {
                    //$('.chzn-select').chosen();
                });
                </script>
        </body>
    </html>