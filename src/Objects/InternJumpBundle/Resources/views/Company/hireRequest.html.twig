{% extends '::base.html.twig' %}
{% block title %}Hire Request{% endblock %}

{% block stylesheets %}
{{parent()}}

{% endblock %}

{% block pageTitle %}Hire Request{% endblock %}

{% block body %}

{% if message is defined %}
<div class=" alert  alert-info">
    <button type="button" class="close" data-dismiss="alert"> × </button>
    {{message}}
</div>
{% else %}
{% if form_errors(form) %}
<div class=" alert  alert-error">
    <button type="button" class="close" data-dismiss="alert"> × </button>
    {{ form_errors(form) }}
</div>
{% endif %}

<div class="container Main-content">
    <div class="row-fluid show-grid">
        <div class="Add-Job-description span12">

            <form class="company-form" action="{{ path('company_hire_user',{'userId' : userId,'cvId' : cvId}) }}" method="post" {{ form_enctype(form) }}>
                <legend><h2>ASK FOR HIRE</h2></legend>
                <fieldset>
                    <div class="controls  row-fluid show-grid">
                        <div class=" span12 select-box">
                            <label>Select Your Internship</label>
                            {{ form_widget(form.internship) }}
                            {% if form_errors(form.internship) %}
                                <div class="alert alert-error">
                                    <button type="button" class="close" data-dismiss="alert"> × </button>
                                    {{ form_errors(form.internship) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="controls  row-fluid show-grid">
                        <div class="span6"></div>
                        <div class="span6">
                            {{ form_rest(form) }}
                            <button class="btn btn-primary pull-right" type="submit">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div><!--Add-Job-description-->
    </div>
</div>

{% endif %}
{% endblock %}


{% block javascripts %}
{{parent()}}
{% endblock %}
