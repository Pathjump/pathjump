{% extends '::base.html.twig' %}

{% block title %}
{{ parent() }} - FAQ
{% endblock %}

{% block pageTitle %}{{ parent() }} - FAQ{% endblock %}

{% block body %}
    <div class="container Main-content">
        <div class="row-fluid show-grid">
            <div class="S-page">
            {% if AskedQuestions %}
                <h1>Frequently Asked Questions</h1>

                <div id="accordion">
                    {% for question in AskedQuestions %}
                    <h2>{{ question.question }}</h2>
                    <div class="pane">
                    {{ question.answer }}
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                No recent frequently asked questions
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
