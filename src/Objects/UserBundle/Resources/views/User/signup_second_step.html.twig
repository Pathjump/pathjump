{% extends '::base.html.twig' %}

{% block title %}Signup Second Step{% endblock %}

{% block pageTitle %}Signup Second Step{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/jquery-ui-1.8.24.custom.css') }}" rel="stylesheet" type="text/css"/>
<style>
    #tooltip{color:#444;font-size:12px;text-shadow:1px 1px 0 #fff;border:1px solid #666;-moz-border-radius:5px;-webkit-border-radius:5px;border-radius:5px;background-repeat:repeat-x;background-position:left top;background-color:#D7D7D7;-moz-box-shadow:0 0 4px #bbb;-webkit-box-shadow:0 0 4px #bbb;box-shadow:0 0 4px #bbb;line-height:1.2em;position:absolute;z-index:100000;display:none;padding:5px}
</style>
{% endblock %}

{% block body %}

        {% if form_errors(form) %}
        <div class="alert alert-error">
            <button data-dismiss="alert" class="close" type="button"> &times; </button>
            {{ form_errors(form) }}
        </div>
        {% endif %}

        <div class="container Main-content">
            <div class="Student">
                <h3>{% if formName %}{{ formName }}{% endif %}</h3>
                <p>{% if formDesc %}{{ formDesc }}{% endif %}</p>
                <div class="row-fluid show-grid">



                    <div class="span12">

                        <form class="formTable" action="{{ path('user_signup_second_step') }}" method="post" {{ form_enctype(form) }}>
                            <fieldset>
                                <div class="controls  row-fluid show-grid">
                                    <div class="span6">
                                        <label>First Name</label>
                                        {{ form_widget(form.firstName, {'attr': {'class': 'span12'} }) }}

                                        <span style="display: inline-block;margin-bottom: 13px;">
                                            <img style="opacity: 1;" class="tooltip" title="Required Field" src="{{ asset('js/tooltip/required.png') }}" />
                                        </span>

                                        {% if form_errors(form.firstName) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.firstName) }}
                                        </div>
                                        {% endif %}
                                    </div>

                                    <div class="span6">
                                        <label>Last Name</label>
                                        {{ form_widget(form.lastName, {'attr': {'class': 'span12'} }) }}

                                        <span style="display: inline-block;margin-bottom: 13px;">
                                            <img style="opacity: 1;" class="tooltip" title="Required Field" src="{{ asset('js/tooltip/required.png') }}" />
                                        </span>

                                        {% if form_errors(form.lastName) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.lastName) }}
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="controls  row-fluid show-grid">
                                    <div class="span6">
                                        <label>Gender</label>
                                        <div class="select-box">
                                            {{ form_widget(form.gender) }}
                                        </div>

                                        {% if form_errors(form.gender) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.gender) }}
                                        </div>
                                        {% endif %}
                                    </div>
                                    <div class="span6">
                                        <label>Date Of Birth</label>
                                        {{ form_widget(form.dateOfBirth, {'attr': {'class': 'dateOfBirth span12'} }) }}

                                        {% if form_errors(form.dateOfBirth) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.dateOfBirth) }}
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="controls  row-fluid show-grid">
                                    <div class="span6">
                                        <label>Country</label>
                                        <div class="select-box">
                                            {{ form_widget(form.country) }}
                                        </div>

                                        <span style="display: inline-block;margin-bottom: 13px;">
                                            <img style="opacity: 1;" class="tooltip" title="Required Field" src="{{ asset('js/tooltip/required.png') }}" />
                                        </span>

                                        {% if form_errors(form.country) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.country) }}
                                        </div>
                                        {% endif %}
                                    </div>

                                    <div class="span6">
                                        <label>City</label>
                                        {{ form_widget(form.city, {'attr': {'class': 'autocomplete span12'} }) }}

                                        <span style="display: inline-block;margin-bottom: 13px;">
                                            <img style="opacity: 1;" class="tooltip" title="Required Field" src="{{ asset('js/tooltip/required.png') }}" />
                                        </span>

                                        {% if form_errors(form.city) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.city) }}
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="controls  row-fluid show-grid">
                                    <div class="span6">
                                        <label>State</label>
                                        <div class="select-box state">
                                            {{ form_widget(form.state, {'attr': {'class': 'state'} }) }}
                                        </div>

                                        {% if form_errors(form.state) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.state) }}
                                        </div>
                                        {% endif %}
                                    </div>

                                    <div class="span6">
                                        <label>Zipcode</label>
                                        <div class="select-box state">
                                            {{ form_widget(form.zipcode, {'attr': {'class': 'span12'} }) }}
                                        </div>

                                        {% if form_errors(form.zipcode) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.zipcode) }}
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="controls">
                                    <label>Address</label>
                                    {{ form_widget(form.address, {'attr': {'class': 'span12'} }) }}

                                    <span style="display: inline-block;margin-bottom: 13px;">
                                        <img style="opacity: 1;" class="tooltip" title="Required Field" src="{{ asset('js/tooltip/required.png') }}" />
                                    </span>

                                    {% if form_errors(form.address) %}
                                    <div class="alert alert-error">
                                        <button type="button" class="close" data-dismiss="alert"> × </button>
                                        {{ form_errors(form.address) }}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="controls">
                                    <label>About</label>
                                    {{ form_widget(form.about, {'attr': {'class': 'span12'} }) }}

                                    {% if form_errors(form.about) %}
                                    <div class="alert alert-error">
                                        <button type="button" class="close" data-dismiss="alert"> × </button>
                                        {{ form_errors(form.about) }}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="controls  row-fluid show-grid">
                                    <div class="span6">
                                        <label>Web Site</label>
                                        <div class="select-box state">
                                            {{ form_widget(form.url, {'attr': {'class': 'span12'} }) }}
                                        </div>

                                        {% if form_errors(form.url) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.url) }}
                                        </div>
                                        {% endif %}
                                    </div>

                                    <div class="span6">
                                        <label>Your Picture:</label>
                                        {{ form_widget(form.file, {'attr': {'class': 'span12'} }) }}

                                        {% if user.image %}
                                        <img id="yourImage" src="{{ user.getTimThumbUrl(65,60) }}" width="65" height="60" />
                                        {% else %}
                                        <img id="yourImage" src="#" width="65" height="60"/>
                                        {% endif %}

                                        {% if form_errors(form.file) %}
                                        <div class="alert alert-error">
                                            <button type="button" class="close" data-dismiss="alert"> × </button>
                                            {{ form_errors(form.file) }}
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>


                                {{ form_rest(form) }}
                                <button type="submit" class="btn btn-primary pull-right">Next</button>
                            </fieldset>
                        </form>
                    </div><!--span7-->

                </div><!--row-fluid-->

            </div><!---Student --->
        </div><!--container-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/tooltip/tooltip.js')}} "></script>
    <script src="{{ asset('js/libs/jquery-ui-1.8.24.custom.min.js') }}" type="text/javascript"></script>
    <script>
        var userCountry = '{{ user.getCountry }}';
        var countrySelectsUrl = '{{ path('get_countey_cities_states', {'countryId': ''}) }}/';
        var countriesUrl = '{{ path('get_all_countries') }}';
        var cityAutoCompleteUrl = "{{ path('city_auto_complete') }}";
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#yourImage').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $(document).ready(function() {
            $('.dateOfBirth').datepicker({changeYear: true, changeMonth: true, yearRange: '1950:' + new Date().getFullYear(), dateFormat: 'yy-mm-dd'});
        });
    </script>
    <script src="{{ asset('bundles/objectsuser/js/address_selects.js') }}"></script>
{% endblock %}
