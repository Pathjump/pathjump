{% extends '::base.html.twig' %}

{% block title %}{% trans %}Student Forgot Password{% endtrans %}{% endblock %}

{% block pageTitle %}Student forgot password{% endblock %}

{% block body %}

{% if error %}
<div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert"> × </button>
    {{ error }}
</div>
{% endif %}
{% if success %}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert"> × </button>
    {{ success }}
</div>
{% endif %}
{% if form_errors(form) %}
<div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert"> × </button>
    {{ form_errors(form) }}
</div>
{% endif %}

<div class="container Main-content">
    <div class="row-fluid show-grid">

        <div class="span6">
            <div class="Sign-Up">

                <form action="{{ path('forgot_password') }}" method="post">
                    <fieldset>
                        <legend><h3>Student forgot password</h3></legend>
                        <div class="controls">
                            <label>Email</label>
                            {{ form_widget(form.email,{'attr' : {'class' : 'span12'}}) }}
                            {% if form_errors(form.email) %}
                                <div class="alert alert-error">
                                    <button type="button" class="close" data-dismiss="alert"> × </button>
                                    {{ form_errors(form.email) }}
                                </div>
                            {% endif %}
                        </div>
                        {{ form_rest(form) }}
                        <button class="btn btn-primary pull-right" type="submit">Submit</button>
                    </fieldset>
                </form>
            </div><!--Sign-Up-->
        </div>

        <div class="span6">
            <div class="Social-sign-up">
                For Employers <a href="{{ path('company_forgot_password') }}"><strong> Employer forgot password </strong></a>
            </div>
        </div>

    </div><!--Sign-Up-->
</div>
{% endblock %}