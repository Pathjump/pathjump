{% extends '::base.html.twig' %}

{% block title %}{% trans %}Twitter Sign up{% endtrans %}{% endblock %}

{% block pageTitle %}Twitter Sign up{% endblock %}

{% block body %}

{% if form_errors(form) %}
<div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert"> × </button>
    {{ form_errors(form) }}
</div>
{% endif %}

<div class="container Main-content">
    <div class="row-fluid show-grid">

        <div class="span6">
            <div class="Sign-Up">

                <form action="{{ path('twitter_enter') }}" method="post">
                    <fieldset>
                        <legend><h3>Please Enter Your Email</h3></legend>
                        <div class="controls">
                            <label>Email</label>
                            {{ form_widget(form.email.Email,{'attr' : {'class' : 'span12'} }) }}
                            {% if form_errors(form.email) %}
                                <div class="alert alert-error">
                                    <button type="button" class="close" data-dismiss="alert"> × </button>
                                    {{ form_errors(form.email) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="controls">
                            <label>Retype Your Email</label>
                            {{ form_widget(form.email.ReEmail,{'attr' : {'class' : 'span12'} }) }}
                        </div>
                        {{ form_rest(form) }}
                        <button class="btn btn-primary pull-right" type="submit">Submit</button>
                    </fieldset>
                </form>
            </div><!--Sign-Up-->
        </div>

    </div><!--Sign-Up-->
</div>
{% endblock %}